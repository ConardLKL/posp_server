<?xml version="1.0" encoding="UTF-8" ?><configuration  scan="true" scanPeriod="100 seconds" debug="true">    <!-- 定义日志的根目录 -->    <property name="LOG_HOME" value="../logs/posp" />    <!-- 定义日志文件名称 -->    <property name="sfip.application.name" value="bpposp-core" />    <!-- ==================== 控制台输出 ===================== -->    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">        <encoder>                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>        </encoder>        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">                <level>debug</level>        </filter>    </appender>    <!-- ================= 按输出级别分类 =================== -->    <!-- info级别 -->    <appender name="SYSTEM"        class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>${LOG_HOME}/${sfip.application.name}-system.log</file>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <FileNamePattern>${LOG_HOME}/${sfip.application.name}-system-%d{yyyy-MM-dd}.%i.log</FileNamePattern>            <MaxHistory>30</MaxHistory>            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>50MB</maxFileSize>            </TimeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>        <encoder>            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>        </encoder>        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">            <level>debug</level>        </filter>    </appender>    <appender name="SQL"        class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>${LOG_HOME}/${sfip.application.name}-sql.log</file>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <FileNamePattern>${LOG_HOME}/${sfip.application.name}-sql-%d{yyyy-MM-dd}.log</FileNamePattern>            <MaxHistory>30</MaxHistory>            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>50MB</maxFileSize>            </TimeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">            <level>debug</level>        </filter>        <encoder>            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>        </encoder>    </appender>    <appender name="CODE" class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>${LOG_HOME}/${sfip.application.name}.log</file>        <encoder>            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>        </encoder>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <fileNamePattern>${LOG_HOME}/${sfip.application.name}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>            <maxHistory>30</maxHistory>            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>50MB</maxFileSize>            </TimeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">            <level>debug</level>        </filter>    </appender>    <logger name="com.bestpay" level="info" addtivity="false">        <appender-ref ref="CODE"/>    </logger>    <logger name="com.tisson" level="info" addtivity="false">        <appender-ref ref="CODE"/>    </logger>    <logger name="com.regaltec" level="info" addtivity="false">        <appender-ref ref="CODE"/>    </logger>    <logger name="com.bestpay.posp.system.dao" level="info" addtivity="false">        <appender-ref ref="SQL"/>    </logger>    <logger name="org.apache.ibatis" level="info" addtivity="false">        <appender-ref ref="SYSTEM"/>    </logger>    <root level="error">        <appender-ref ref="SYSTEM" />    </root></configuration>